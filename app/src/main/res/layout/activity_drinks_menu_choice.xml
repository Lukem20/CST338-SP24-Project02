<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/cFM"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="@string/choice_drink"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_Coffee"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:text="Coffees"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cFM" />

    <Button
        android:id="@+id/b_Teas"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="36dp"
        android:text="Teas"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_Coffee" />

    <Button
        android:id="@+id/b_smoothies"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:text="Juices"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_Teas" />

    <Button
        android:id="@+id/goBack"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginBottom="72dp"
        android:text="@string/go_back"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_smoothies"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>