<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".admin_page">

  <TextView
      android:id="@+id/adminPage"
      android:layout_width="250dp"
      android:layout_height="75dp"
      android:layout_marginTop="100dp"
      android:gravity="center"
      android:text="@string/admin_page"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/OHButton"
      android:layout_width="192dp"
      android:layout_height="111dp"
      android:layout_marginTop="240dp"
      android:onClick="display_order_history"
      android:text="@string/view_customer_order"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/UInfoButton"
      android:layout_width="192dp"
      android:layout_height="111dp"
      android:layout_marginTop="400dp"
      android:onClick="display_user_info"
      android:text="@string/view_customer_info"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/goBack"
      android:layout_width="125dp"
      android:layout_height="53dp"
      android:layout_marginTop="568dp"
      android:background="#00FFFCFC"
      android:onClick="goBack"
      android:text="@string/logout"
      android:textColor="#5A5656"
      android:textColorHighlight="#727070"
      android:textSize="24sp"
      android:textStyle="bold|italic"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>