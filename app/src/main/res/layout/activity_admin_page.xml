<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".adminActivities.AdminActivity">

  <TextView
      android:id="@+id/adminPage"
      android:layout_width="250dp"
      android:layout_height="75dp"
      android:layout_marginTop="60dp"
      android:gravity="center"
      android:text="@string/admin_page"
      android:textColor="#050505"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/EditMenuButton"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:onClick="edit_menu"
      android:text="@string/edit_menu_items"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/adminPage"
      app:layout_constraintVertical_bias="0.066" />

  <Button
      android:id="@+id/OrderHistoryButton"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:onClick="display_order_history"
      android:text="@string/order_history"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/UserInfoButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.521"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/EditMenuButton" />

  <Button
      android:id="@+id/UserInfoButton"
      android:layout_width="250dp"
      android:layout_height="100dp"
      android:onClick="display_user_info"
      android:text="@string/user_information"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/goBack"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.808" />

  <Button
      android:id="@+id/goBack"
      android:layout_width="125dp"
      android:layout_height="60dp"
      android:text="@string/go_back"
      android:textSize="18sp"
      android:layout_marginBottom="48dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>